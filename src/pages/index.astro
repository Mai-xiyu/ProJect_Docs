<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Mai_xiyu Projects</title>
    <meta name="description" content="Mai_xiyu's Project Hub">
    <script>
        // 获取浏览器语言
        const userLang = navigator.language || navigator.userLanguage;
        const isZhCN = userLang.toLowerCase().includes('zh');
        
        // 获取当前 base path
        const basePath = '/OneKeyMiner_Docs';
        
        // 重定向到对应语言页面
        const targetPath = isZhCN ? `${basePath}/zh-cn/` : `${basePath}/en/`;
        window.location.replace(targetPath);
    </script>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .loading {
            text-align: center;
            color: white;
        }
        .spinner {
            border: 4px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top: 4px solid white;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="loading">
        <div class="spinner"></div>
        <p>正在跳转 / Redirecting...</p>
    </div>
    <noscript>
        <meta http-equiv="refresh" content="0; url=/OneKeyMiner_Docs/zh-cn/">
    </noscript>
</body>
</html>
