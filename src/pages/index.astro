<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mai_xiyu Projects</title>
    <meta name="description" content="Mai_xiyu's Project Hub">
    <script>
        // 核心跳转逻辑（保留原逻辑并优化）
        const userLang = navigator.language || navigator.userLanguage;
        const isZhCN = userLang.toLowerCase().includes('zh');
        const basePath = '/ProJect_Docs';
        const targetPath = isZhCN ? `${basePath}/zh-cn/` : `${basePath}/en/`;
        
        // 增加 1.5 秒延迟，让用户能看到精美的加载动画，提升感知体验
        setTimeout(() => {
            window.location.replace(targetPath);
        }, 1500);
    </script>
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --glass-bg: rgba(255, 255, 255, 0.1);
            --glass-border: rgba(255, 255, 255, 0.2);
            --text-color: #ffffff;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'PingFang SC', 'Microsoft YaHei', -apple-system, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background: var(--primary-gradient);
            background-attachment: fixed;
            overflow: hidden;
        }

        /* 背景装饰球，增加层次感 */
        .bg-orb {
            position: absolute;
            border-radius: 50%;
            filter: blur(80px);
            z-index: -1;
            animation: float 10s infinite alternate ease-in-out;
        }
        .orb-1 { width: 300px; height: 300px; background: #8fd3f4; top: -100px; right: -50px; }
        .orb-2 { width: 400px; height: 400px; background: #845ef7; bottom: -150px; left: -100px; opacity: 0.6; }

        @keyframes float {
            0% { transform: translate(0, 0); }
            100% { transform: translate(30px, 50px); }
        }

        /* 毛玻璃容器 */
        .glass-card {
            background: var(--glass-bg);
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            padding: 3rem;
            text-align: center;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
            animation: fadeIn 0.8s ease-out;
            max-width: 400px;
            width: 90%;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* 现代加载动画 */
        .loader-wrapper {
            position: relative;
            width: 80px;
            height: 80px;
            margin: 0 auto 24px;
        }

        .spinner {
            box-sizing: border-box;
            display: block;
            position: absolute;
            width: 64px;
            height: 64px;
            margin: 8px;
            border: 6px solid #fff;
            border-radius: 50%;
            animation: spinner 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
            border-color: #fff transparent transparent transparent;
        }
        .spinner:nth-child(1) { animation-delay: -0.45s; }
        .spinner:nth-child(2) { animation-delay: -0.3s; }
        .spinner:nth-child(3) { animation-delay: -0.15s; }

        @keyframes spinner {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .title {
            color: var(--text-color);
            font-size: 1.5rem;
            font-weight: 600;
            margin: 0 0 8px 0;
            letter-spacing: 1px;
        }

        .subtitle {
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.9rem;
            margin: 0;
        }

        /* 响应式调整 */
        @media (max-width: 480px) {
            .glass-card { padding: 2rem; }
            .title { font-size: 1.25rem; }
        }
    </style>
</head>
<body>
    <div class="bg-orb orb-1"></div>
    <div class="bg-orb orb-2"></div>

    <div class="glass-card">
        <div class="loader-wrapper">
            <div class="spinner"></div>
            <div class="spinner"></div>
            <div class="spinner"></div>
        </div>
        <h1 class="title">Mai_xiyu Projects</h1>
        <p class="subtitle">正在跳转 / Redirecting...</p>
    </div>

    <noscript>
        <meta http-equiv="refresh" content="0; url=/OneKeyMiner_Docs/zh-cn/">
    </noscript>
</body>
</html>
